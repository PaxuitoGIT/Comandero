<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreLinea"
                android:text="Nombre Plato"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPrecioLinea"
                android:text="0.00 â‚¬"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNotaLinea"
                android:text="Nota..."
                android:textSize="12sp"
                android:textColor="#D32F2F"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnItemEdit"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="#2196F3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Editar"/>

            <ImageButton
                android:id="@+id/btnItemPlus"
                android:src="@android:drawable/ic_input_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="#4CAF50"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Repetir"/>

            <ImageButton
                android:id="@+id/btnItemDelete"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="#F44336"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Eliminar"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>